{{#each errors }}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}

<div class="col-md-5 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nuevo paciente</h3>
        </div>
        <div class="card-body">
            <form action="/paciente/new-paciente" method="post">
                <div class="mt-3">
                    <input type="text" name="dni" class="form-control" placeholder="Dni" autofocus>
                </div>
                <div class="mt-3">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" autofocus>
                </div>
                <div class="mt-3">
                    <input type="text" name="apellido" class="form-control" placeholder="Apellido" autofocus>
                </div>
                <div class="mt-3">
                    <input type="text" name="telefono" class="form-control" placeholder="Telefono" autofocus>
                </div>
                <div class="mt-3">
                    <input type="text" name="mail" class="form-control" placeholder="Mail" autofocus>
                </div>
                <div class="mt-3">
                    <input type="text" name="direccion" class="form-control" placeholder="Direccion" autofocus>
                </div>
                <div class="mt-3">
                    <input type="date" name="fecha_nac" class="form-control" placeholder="Fecha Nacimiento" autofocus>
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary w-100" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>