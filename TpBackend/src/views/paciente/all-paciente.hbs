<table class="table table-hover table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Dni</th>
            <th scope="col">Telefono</th>
            <th scope="col">Mail</th>
            <th scope="col">Direccion</th>
            <th scope="col">Fecha de Nacimiento</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>

    {{#each pacientes}}

            <tr>
                <th scope="row"></th>
                <td>{{nombre}}</td>
                <td>{{apellido}}</td>
                <td>{{dni}}</td>
                <td>{{telefono}}</td>
                <td>{{mail}}</td>
                <td>{{direccion}}</td>
                <td>{{fecha_nac}}</td>
                <td><a HREF="/paciente/edit/{{_id}}"><i class="fas fa-edit"></i> </a></td>
                <td><form action="/paciente/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                        Delete
                    </button>
                </form></td>

            </tr>
    {{else}}
        <div class="card text-center">
            <div class="card-body">
                <p class="lead">No hay pacientes aun.</p>
                <a href="/paciente/add" class="btn btn-success btn-block">Create One!</a>
            </div>
        </div>
    {{/each}}
        </tbody>
</table>>