<div class="col-md-5 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit paciente</h3>
        </div>
        <div class="card-body">
            <form action="/paciente/edit-paciente/{{paciente._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="dni" class="form-control" placeholder="Dni" value="{{paciente.dni}}">
                </div>
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" value="{{paciente.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="apellido" class="form-control" placeholder="Apellido" value="{{paciente.apellido}}">
                </div>
                <div class="form-group">
                    <input type="text" name="telefono" class="form-control" placeholder="Telefono" value="{{paciente.telefono}}">
                </div>
                <div class="form-group">
                    <input type="text" name="mail" class="form-control" placeholder="Mail" value="{{paciente.mail}}">
                </div>
                <div class="form-group">
                    <input type="text" name="direccion" class="form-control" placeholder="Direccion" value="{{paciente.direccion}}">
                </div>
                <div class="form-group">
                    <input type="date" name="fecha_nac" class="form-control" placeholder="Fecha Nacimiento" value="{{paciente.fecha_nac}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary w-100" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>